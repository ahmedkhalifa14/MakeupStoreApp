<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/product_item_background"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="@dimen/_3sdp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRAdius="@dimen/_5sdp"
    >

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/product2_img"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/mascara" />

            <TextView
                android:id="@+id/discount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:padding="@dimen/_8sdp"
                android:fontFamily="@font/raleway_medium"
                android:layout_gravity="start|top"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/_12ssp"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product2_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="product name"
                android:fontFamily="@font/raleway_extra_bold"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/product2_brand_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="product brand"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/secondColor"
                />

            <TextView
                android:id="@+id/product2_price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="product price"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_baseline_star_24"
                    app:tint="@color/grey" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_baseline_star_24"
                    app:tint="@color/grey" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_baseline_star_24"
                    app:tint="@color/grey" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_baseline_star_24"
                    app:tint="@color/grey" />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_baseline_star_24"
                    app:tint="@color/grey" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/favourite"
            android:padding="@dimen/_8sdp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>